    key <AC11> {[ parenleft, parenright ]};

    key <AB01> {[ q,         Q         ]};
    key <AB02> {[ x,         X         ]};
    key <AB03> {[ m,         M         ]};
    key <AB04> {[ w,         W         ]};
    key <AB05> {[ j,         j         ]};
    key <AB06> {[ k,         K         ]};
    key <AB07> {[ f,         F         ]};
    key <AB08> {[ apostrophe, quotedbl ]};
    key <AB09> {[ minus,    underscore ]};
    key <AB10> {[ period,    question  ]};

    key <KP1> {[ grave,       asciitilde ]};
