 // sudo cp gallium /usr/share/X11/xkb/symbols/

default partial
xkb_symbols "basic" {

    include "us(basic)"

    name[Group1] = "Gallium";

    key <TLDE> {[ at,        dollar    ]};
    key <AE01> {[ 1,         ampersand ]};
    key <AE07> {[ 7,         exclam    ]};
    key <AE09> {[ 9,         less      ]};
    key <AE10> {[ 0,         greater   ]};
    key <AE11> {[ endash,    emdash    ]};
    key <AE12> {[ bracketright, braceright ]};

    key <AD01> {[ b,         B         ]};
    key <AD02> {[ l,         L         ]};
    key <AD03> {[ d,         D         ]};
    key <AD04> {[ c,         C         ]};
    key <AD05> {[ v,         V         ]};
    key <AD06> {[ z,         Z         ]};
    key <AD07> {[ y,         Y         ]};
    key <AD08> {[ o,         O         ]};
    key <AD09> {[ u,         U         ]};
    key <AD10> {[ comma,     slash     ]};
    key <AD11> {[ semicolon, colon     ]};
    key <AD12> {[ equal,     plus      ]};

    key <AC01> {[ n,         N         ]};
    key <AC02> {[ r,         R         ]};
    key <AC03> {[ t,         T         ]};
    key <AC04> {[ s,         S         ]};
    key <AC05> {[ g,         G         ]};
    key <AC06> {[ p,         P         ]};
    key <AC07> {[ h,         H         ]};
    key <AC08> {[ a,         A         ]};
    key <AC09> {[ e,         E         ]};
